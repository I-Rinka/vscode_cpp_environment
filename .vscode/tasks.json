{
    // 有关 tasks.json 格式的文档，请参见
    // https://go.microsoft.com/fwlink/?LinkId=733558
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Copyright",
            "command": "g++",
            "linux": {
                "args": [
                    "-g",
                    "${file}",
                    "-include",
                    "${workspaceRoot}/.vscode/head.h",
                    "-o",
                    "${fileDirname}/${fileBasenameNoExtension}.out"
                ]
            },
            "windows": {
                "args": [
                    "-g",
                    "${file}",
                    "-include",
                    "${workspaceRoot}/.vscode/head.h",
                    "-o",
                    "${fileDirname}/${fileBasenameNoExtension}.exe"
                ]
            },
        },
        {
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "linux": {
                "args": [
                    "-g",
                    "${file}",
                    "-o",
                    "${fileDirname}/${fileBasenameNoExtension}.out"
                ]
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/Fe:",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clear",
            "type": "shell",
            "command": "rm",
            "args": [
                "${fileDirname}\\*.pdb,*.pdb,${fileDirname}\\*.ilk,*.ilk,${fileDirname}\\*.obj,*.obj",
                "-Force"
            ],
            "group": "none",
            "problemMatcher": []
        }
    ]
}